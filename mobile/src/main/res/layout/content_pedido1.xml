<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fpmuno"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.carta.dx.menucocina.pedido1"
    tools:showIn="@layout/activity_pedido1">

    <TextView
        android:id="@+id/preparacion"
        android:layout_width="800dp"
        android:layout_height="100dp"

        android:layout_marginTop="106dp"
        android:lines="10"
        android:maxLines="10"
        android:minLines="7"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#040303"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/btlist"
        android:layout_below="@+id/preparacion"
        android:layout_alignEnd="@+id/preparacion" />

</RelativeLayout>
